<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/webflow
  http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd" start-state="order">

    
    <view-state id="order" view="viewOrder">
        <transition on="continue" to="action"/>
    </view-state>
    
    <action-state id="action">
    	<transition to="order2"/>
    </action-state>
    
    <view-state id="order2" view="viewOrder2">
    
    </view-state>

</flow>